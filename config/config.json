{
    "log_dir" : "logs",
    "tests_dir" : "tests",
    "log_config" : {
        "version": 1,
        "formatters" : {
            "standard" : {
                "format" : "%(asctime)s [%(levelname)s] %(name)s: %(message)s"
            }
        },
        "handlers" : {
            "file" : {
                "level" : "INFO",
                "formatter" : "standard",
                "class" : "logging.FileHandler",
                "filename" : "set_in_script"
            },
            "console" : {
                "level" : "INFO",
                "formatter" : "standard",
                "class" : "logging.StreamHandler"
            }
        },
        "loggers" : {
            "first_log" : {
                "handlers" : ["file","console"],
                "level" : "INFO",
                "propagate" : "False"
            }
        }
    }
}